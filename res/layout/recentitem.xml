<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="2dp"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:src="@drawable/search1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影名:" />

            <TextView
                android:id="@+id/rcentTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上映日期:" />

            <TextView
                android:id="@+id/rcentPlayData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上映日期" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主演:" />

            <TextView
                android:id="@+id/rcentStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主演" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导演:" />

            <TextView
                android:id="@+id/rcentDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导演" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型:" />

            <TextView
                android:id="@+id/rcentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧情:" />

            <TextView
                android:id="@+id/rcentStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧情" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</LinearLayout>